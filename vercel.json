{
  "version": 2,
  "buildCommand": "cd ui && npm run build",
  "outputDirectory": "ui/dist",
  "framework": "vite",
  "installCommand": "cd ui && (npm ci || npm install)",
  "devCommand": "cd ui && npm run dev",
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://extractify-backend.onrender.com/api/:path*"
    },
    {
      "source": "/backend/:path*",
      "destination": "https://extractify-backend.onrender.com/api/:path*"
    }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "Access-Control-Allow-Origin",
          "value": "*"
        }
      ]
    }
  ]
}
